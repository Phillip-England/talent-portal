<section id="current-candidate-listing" class="default-section side-buffer">

    <% candidates.forEach(candidate => { %>
        
        <form class="candidate-toggle-menu-wrapper">

            <div class="candidate-toggle-menu">

                <div class="candidate-name-wrapper">
                    <h3 class="candidate-name"><%= candidate.firstName %> <%= candidate.lastName %></h3>
                </div>
    
                <div class="candidate-icon-wrapper">
                    <i class="fa-solid fa-angle-up candidate-close-icon"></i>
                    <i class="fa-solid fa-angle-down candidate-open-icon"></i>
                </div>
    
            </div>
    
            <div class="hidden-candidate-menu">

                <div class="candidate-details">
                    <% if (candidate.phone) { %>
                        <p class="candidate-phone"><%= candidate.phone %></p>
                    <% } else { %>
                        <p class="candidate-phone">No phone provided</p>
                    <% } %>
                    <% if (candidate.email) { %>
                        <p class="candidate-email"><%= candidate.email %></p>
                    <% } else { %>
                        <p class="candidate-email">No email provided</p>
                    <% } %>
                </div>

                <div class="candidate-edit-form">
                    <div class='input-wrapper'>
                        <input type="text" placeholder="First Name" value="<%=candidate.firstName%>">
                    </div>
                    <div class='input-wrapper'>
                        <input type="text" placeholder="Last Name" value="<%=candidate.lastName%>">
                    </div>
                    <div class='input-wrapper'>
                        <input type="text" placeholder="Phone" value="<%=candidate.phone%>">
                    </div>
                    <div class='input-wrapper last-input-wrapper'>
                        <input type="text" placeholder="Email" value="<%=candidate.email%>">
                    </div>
                    <div class="update-button-wrapper">
                        <button class='candidate-update-button' type="button">Update</button>
                        <button class="cancel-edit-form-button" type="button">Cancel</button>
                    </div>
                </div>


                <div class="candidate-options">
                    <div class="hidden-menu-icon-wrapper">
                        <i class="fa-solid fa-pen candidate-edit-icon" candidateID="<%=candidate._id%>"></i>
                    </div>
                    <div class="hidden-menu-icon-wrapper">
                        <i class="fa-solid fa-clipboard-list candidate-interview-icon"></i>
                    </div>
                    <div class="hidden-menu-icon-wrapper">
                        <i class="fa-solid fa-trash-can candidate-delete-icon"></i>
                    </div>
                </div>



            </div>



        </form>


    <% }) %>

</section>